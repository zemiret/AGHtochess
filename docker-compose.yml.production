version: '3'

networks:
  proxy-tier:
    external:
      name: nginx-proxy

services:
  communicator:
    build: ./communicator
    environment:
      - GAME_MECHANICS_HOST=http://mechanics
      - VIRTUAL_HOST=api.aghtochess.mionskowski.pl
      - VIRTUAL_PORT=4000
      - LETSENCRYPT_HOST=api.aghtochess.mionskowski.pl
      - LETSENCRYPT_EMAIL=aghtochess@maciekmm.net
    ports:
      - "4000:4000"
    links:
      - mechanics
    networks:
      - proxy-tier
  mechanics:
    build: ./mechanics
    ports:
      - "5000:80"
    networks:
      - proxy-tier
  frontend:
    build:
      context: ./frontend
      args:
        - REACT_APP_API_HOST=wss://api.aghtochess.mionskowski.pl
    environment: 
      - VIRTUAL_HOST=aghtochess.mionskowski.pl
      - VIRTUAL_PORT=80
      - LETSENCRYPT_HOST=aghtochess.mionskowski.pl
      - LETSENCRYPT_EMAIL=aghtochess@maciekmm.net
    ports:
      - "8080:80"
    networks:
      - proxy-tier
